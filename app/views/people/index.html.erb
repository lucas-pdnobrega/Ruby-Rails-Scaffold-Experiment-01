<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<h3>People</h3>

<div id="people">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nome</th>
        <th scope="col">Abreviação</th>
        <th scope="col">Data de Nascimento</th>
        <th scope="col">Administração</th>
        <th scope="col">
          <%= link_to "Cadastrar",
          new_person_path,
          class: "btn btn-outline-success" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @people.each do |person| %>
        <%= render_table_row(person) %>
      <% end %>
    </tbody>
  </table>
</div>
